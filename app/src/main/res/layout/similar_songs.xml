<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="7dp"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="@string/top_track"
            android:padding="7dp"
            android:id="@+id/simi_txt"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:text="@string/see_more"
            android:padding="7dp"
            android:textColor="@color/see_more"
            android:id="@+id/see_more"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <HorizontalScrollView
            android:layout_below="@id/simi_txt"
            android:layout_margin="1dp"
            android:fillViewport="true"
            android:id="@+id/horizontal_sv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <GridView
                    tools:listitem="@layout/similar_songs_item_view"
                    android:id="@+id/horizontal_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                </GridView>
            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>
</android.support.v7.widget.CardView>