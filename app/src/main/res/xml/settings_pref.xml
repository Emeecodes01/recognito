<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:title="Vibration"
        android:key="@string/vibration_pref"
        android:summaryOn="vibration enabled"
        android:summaryOff="vibration disabled"
        android:defaultValue="true"/>

    <CheckBoxPreference
        android:title="Start recognition when app is opened"
        android:key="@string/recognition_pref"
        android:summaryOn="Enabled"
        android:summaryOff="Disabled"
        android:defaultValue="false"/>

</PreferenceScreen>